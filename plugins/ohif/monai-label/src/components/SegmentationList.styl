.segmentationList
  .subtitle
    font-size: 14px
    text-decoration: underline
    font-weight 500

  .segSection
    height: 200px;
    overflow-y: auto;
    overflow-x: hidden;
    border: 1px solid;

  .segTable
    border-collapse: collapse;
    border: 1px dotted;
    width: 100%;
    display: block;
    white-space: nowrap;
    overflow-x: auto;

  .segTable tr:nth-child(even) {
    background-color: #333333
  }

  .segTable tr th
    background-color: #333333;
    border: 1px dotted;
    padding: 2px;

  .segTable tr td
    padding: 2px;

  .segColor
    height: 15px;
    width: 15px;
    background-color: #bbb;
    border-radius: 50%;
    display: inline-block

  .segEdit
    display: flex
